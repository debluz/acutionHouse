<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/myDetails.css">
    <title>Moje dane</title>
</head>
<body>
<div class="wrap">
    <%- include('./partials/header') -%>

    <main>
        <%- include('./partials/userNav') -%>


        <div class="registrationFlex">
            <div class="errors-list">
                <ul>
                    <% errorsList.forEach(function (error){%>
                        <li style="color: #e74c3c"><%= error%></li>
                    <% }); %>
                </ul>
            </div>

            <h1>Moje dane</h1>
            <form action="/users/myDetails/?_method=PUT--" method="post" class="formFlex" id="formDetails" novalidate>
                <label for="first_name">Imię:
                    <input type="text" name="first_name" id="first_name" value="<%= user.firstName %>"><span class="required"></span>
                </label>
                <span id="errors_first_name" class="errors-text"></span>

                <label for="second_name">Nazwisko:
                    <input type="text" name="second_name" id="second_name" value="<%= user.lastName %>"><span class="required"></span>
                </label>
                <span id="errors_second_name" class="errors-text"></span>

                <label for="birthday">Data urodzenia:
                    <input type="date" name="birthday" id="birthday" value="2002-12-30"><span class="required"></span>
                </label>
                <span id="errors_birthday" class="errors-text"></span>

                <label for="address">Ulica:
                    <input type="text" name="address" id="address" value="<%= user.address %>"><span class="required"></span>
                </label>
                <span id="errors_address" class="errors-text"></span>

                <label for="postal_code">Kod pocztowy:
                    <input type="text" name="postal_code" id="postal_code" value="<%= user.postalCode %>"><span class="required"></span>
                </label>
                <span id="errors_postal_code" class="errors-text"></span>

                <input type="submit" class="registerButton" value="Zatwierdź dane">
                <p id="errors_info" class="errors_text"></p>
            </form>

        </div>

    </main>

</div>
<script src="/js/validationRegistration.js"></script>
</body>

<%- include('./partials/scriptNav') -%>
</html>

