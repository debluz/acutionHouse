<!DOCTYPE html>
<html lang="">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/css/login.css">
    <title>Logowanie</title>
</head>
<body>
<div class="wrap">
    <header>
        <div class="headerFlex">
            <h1 class="title">Auction House</h1>
            <div class="menuDiv">
                <div class="container" onclick="openNav()" onmouseover="myFunction(this)">
                    <div class="bar1"></div>
                    <div class="bar2"></div>
                    <div class="bar3"></div>
                </div>
            </div>
        </div>
    </header>


    <main>
        <%- include('./partials/guestNav') -%>

        <section>
            <form action="/users/login" method="post" class="formFlex" id="formLogin" novalidate>
                <label for="login">Login:
                    <input type="text" name="login" id="login">
                </label>
                <span id="errors_login" class="errors-text"></span>
                <label for="password">Hasło:
                    <input type="password" name="password" id="password">
                </label>
                <span id="errors_password" class="errors-text"></span>
                <div>
                    <input type="submit" value="Zaloguj się">
                </div>
                <p id="errors_info" class="errors-text"></p>
            </form>
        </section>

        <section class="imgFlex">
            <img class="img1" src="/img/bezpiecznie.jpg" alt="info1">
            <img class="img2" src="/img/delivery.jpg" alt="info2">
            <img class="img3" src="/img/gwarancja-usług.jpg" alt="info3">
            <p class="info1">Biezpiecznie</p>
            <p class="info2">Szybka realizacja</p>
            <p class="info3">Gwarancja usług</p>
        </section>
    </main>



</div>
<script src="/js/validationLogin.js"></script>
</body>

<%- include('./partials/scriptNav') -%>
</html>
